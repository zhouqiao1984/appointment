.radio-group {
    border-bottom: 1px solid #ddd;
    padding: 0rpx 8rpx 0rpx 8rpx;
    margin: 0 auto;
    height: 90%;
}

.radio-group>view {
  position: relative;
  display: inline-block;
  width: 25%;
  /* color: #666; */
  text-align: center;
  vertical-align: middle;
  height: 10%;
}

.i-radio .busy {
  color:#f50a0a;
}

.i-radio .free {
  color: #09BB07;
}

