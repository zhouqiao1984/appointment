@import '../lib/weui.wxss';
.i_userinfo {
  background-color: white;
  display: flex;
  height: 6em;
  align-items: center;
}

.i_userinfo image {
  width: 4em;
  height: 4em;
  padding-left: 1em;
}
.i_userinfo .i_name {
  padding-left: 2em;
  padding-top: .3em;
  /* align-self: flex-start; */
}
.i_openid {
  display: flex;
  height: 3em;
  align-items: center;
}
.i_openid input{
  margin-left: .6em;
  width: 100%;
}

.i_menu {
  margin-top: 15px;
  background-color: white;
}

.i_navigator {
  display: flex;
  justify-content: space-between;
  height: 3em;
  align-items: center;
}
.i_navigator_big {
  display: flex;
  justify-content: space-between;
  height: 6em;
  align-items: center;
}
.i_label {
  line-height: 2em;
  font-family: Cursive;
  padding-left: 1em;

}
.i_label .i_h1{
  font-size: 40rpx;
}
.i_label .i_h2{
  font-size: 28rpx;
}
.i_navigator .i_label, .i_openidkey {
  padding-left: 1em;
}
.i_navigator .i_text, .i_navigator_big .i_text{
  display: flex;
  align-items: center;
  padding-right: 1.2em;
  color: #8a8a8a
}

.i_text image {
  width: 1em;
  height: 1em;
  margin-left: 0.3em;
  padding-top: 0.15em;
}
.i_icon image {
  width: 4em;
  height: 3.6em;
  margin-left: 2em;
  /* padding-top: 0.15em; */
}
