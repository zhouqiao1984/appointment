<!--pages/recordAppoint/recordAppoint.wxml-->

<view class="i-row" wx:if='{{items.length==0}}' wx:key=''>
      <view class="i-nodata"><view>暂无记录</view></view>
  </view>
  <view class="i-row" wx:if='{{items.length>0}}' wx:for='{{items}}' wx:key=''>
      <view class="i-due" wx:if='{{item.did<curr}}'>
          <image src='/images/timegray48.png' /> 
          <view >{{item.view}}</view> 
      </view>
      <view class="i-text" wx:else>
          <image src='/images/timeblue48.png' /> 
          <view >{{item.view}}</view>
      </view> 
  </view>

